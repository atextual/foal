{
  "name": "foal",
  "version": "0.1.0",
  "description": "next up; money.",
  "author": "Robert Andrew",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atextual/foal"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "cross-env NITRO_PRESET=static nuxt generate",
    "prepare": "husky install",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.vue,.js --ignore-pattern 'node_modules' --ignore-pattern 'dist' --ignore-pattern '.nuxt' --ignore-pattern '.output' --ignore-pattern 'src-tauri' --ignore-pattern '*.test.ts' --ignore-pattern 'test/'",
    "lint:fix": "eslint . --ext .ts,.vue,.js --ignore-pattern 'node_modules' --ignore-pattern 'dist' --ignore-pattern '.nuxt' --ignore-pattern '.output' --ignore-pattern 'src-tauri' --ignore-pattern '*.test.ts' --ignore-pattern 'test/' --fix",
    "format": "prettier --write '**/*.{vue,ts,js,json,md}'"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/ui": "^2.10.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@tauri-apps/cli": "^1.5.6",
    "@typescript-eslint/parser": "^6.9.1",
    "@vue/test-utils": "^2.4.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nuxt": "^3.8.1",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vitest": "^1.0.4",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "lint-staged": {
    "*.{vue,ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@iconify-json/tabler": "^1.1.96",
    "@pinia/nuxt": "^0.5.1",
    "@tauri-apps/api": "^1.5.2",
    "@vueuse/core": "^13.9.0",
    "@vueuse/nuxt": "^13.9.0",
    "pinia": "^2.1.7"
  }
}
